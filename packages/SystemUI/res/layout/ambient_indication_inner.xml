<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ambient_indication"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:forceHasOverlappingRendering="false"
    android:layout_marginBottom="77.0dip"
    android:layout_marginEnd="41.0dip"
    android:layout_marginStart="41.0dip"
    android:orientation="vertical"
    android:paddingTop="8.0dip"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ambient_indication_icon"
            android:src="@drawable/ic_music_note_24dp"
            android:tint="?wallpaperTextColorSecondary"
            android:tintMode="src_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:forceHasOverlappingRendering="false"
            android:layout_gravity="center"
            android:scaleType="center" />

        <TextView
            android:id="@+id/ambient_indication_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:forceHasOverlappingRendering="false"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:letterSpacing="0.02"
            android:paddingBottom="15.0sp"
            android:paddingTop="15.0sp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.Keyguard.BottomArea"
            android:textSize="14.0sp" />

    </LinearLayout>

</LinearLayout>
